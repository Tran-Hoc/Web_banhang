    </li>
}
@section pageHeader{
    <li class="breadcrumb-item active">@ViewData["Title"]</li>
}

<section class="content">
    <div class="container-fluid">
        <div class="col-12">
            <div class="card">
                <div class="card-body table-responsive p-0">
                    <a href="./FileManager/GetFile" class="btn btn-primary">Get File</a>
                    <div id="elfinder">
                    </div>
                    <button id="elfinder_button" class="btn-dark">Elfinder dialog </button>
                    < div id = "editor" />
                </div>
            </div>
        </div>
    </div>
</section>



