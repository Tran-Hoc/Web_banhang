@{
    ViewData["Title"] = "Quản lý tài nguyên";
    ViewData["parent"] = "";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}
@section leftnavbar{

    <li class="nav-item d-none d-sm-inline-block">
        <a href="" class="nav-link"> @ViewData["parent"]</a>
    </li>
    <li class="nav-item d-none d-sm-inline-block">
        <a href="#" class="nav-link">@ViewData["Title"]</a>
    </li>
