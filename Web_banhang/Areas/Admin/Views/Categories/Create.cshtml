@model Web_banhang.Data.TbCategory
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Thêm mới";
    ViewData["parent"] = "Danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    //ViewBag.menuChildName = "Thêm mới";
}

@section leftnavbar{
    <li class="nav-item d-none d-sm-inline-block">
        <a href=".." class="nav-link"> @ViewData["parent"]</a>
    </li>
    <li class="nav-item d-none d-sm-inline-block">
        <a href="#" class="nav-link">@ViewData["Title"]</a>
    </li>
}
@section pageHeader{
    <li class="breadcrumb-item active">@ViewData["parent"]</li>
    <li class="breadcrumb-item active">@ViewData["Title"]</li>
}

<section class="content">
    <div class="container-fluid">
        <div class="col-12">
            <div class="card">
                <div class="card card-primary">
                    <!-- form start -->
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="Title" ></label>
                                <input asp-for="Title" class="form-control" placeholder="Tên danh mục" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <textarea asp-for="Description" class="form-control" placeholder="Mô tả" ></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SeoTitle" class="control-label"></label>
                                <textarea asp-for="SeoTitle" class="form-control" placeholder="Tiêu đề SEO"></textarea>
                                <span asp-validation-for="SeoTitle" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SeoDescription" class="control-label"></label>
                                <textarea asp-for="SeoDescription" class="form-control" placeholder="Mô tả SEO"></textarea>
                                <span asp-validation-for="SeoDescription" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SeoKeywords" class="control-label"></label>
                                <textarea asp-for="SeoKeywords" class="form-control"  placeholder="Từ khoá SEO"></textarea>
                                <span asp-validation-for="SeoKeywords" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Position" class="control-label"></label>
                                <input asp-for="Position" type="number" class="form-control" placeholder="Vị trí" value="1" />
                                <span asp-validation-for="Position" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Lưu</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
